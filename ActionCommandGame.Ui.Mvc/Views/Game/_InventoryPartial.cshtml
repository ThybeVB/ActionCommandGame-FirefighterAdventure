@model IList<PlayerItem>

<h4>Inventory</h4>

<div class="row">
    @if (Model.Count != 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Item.Name</h5>
                        <p class="card-text">@item.Item.Description</p>
                        <!-- <a href="#" class="btn btn-primary">Buy</a> -->
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>There is nothing here :(</p>
    }
</div>