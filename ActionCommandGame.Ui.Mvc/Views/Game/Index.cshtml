@{
    ViewData["BodyClass"] = "game";
    ViewData["Title"] = "Game";
}

<div class="container-fluid">
	<div class="row">
		<div class="col sidebar">
            <partial name="_SidebarPartial"/>
        </div>
		<div class="col main-content">
			<h2>Firefighter Adventure</h2>
            <p>@ViewData["PlayerName"], ready for duty!</p>
            <div id="active-panel"></div>
            <div class="mt-3">
                <button type="button" class="btn btn-danger mr-2" id="patrol-button">Patrol</button>
                <button type="button" class="btn btn-success mr-2" id="shop-button">Shop</button>
                <button type="button" class="btn btn-warning mr-2" id="inventory-button">Inventory</button>
                <button type="button" class="btn btn-info mr-2" id="leaderboard-button">Leaderboard</button>
            </div>
		</div>
	</div>
</div>