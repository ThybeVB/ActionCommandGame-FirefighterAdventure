@model GameView

<div class="container-fluid">
	<div class="row">
		<div class="col sidebar">
			<h3 class="ml-auto">Hello @Model.Player.Name</h3>
		</div>
		<div class="col main-content">
			<h1>Main Content</h1>
			<p>@Model.Player.Name</p>
			<div class="mt-3">
				<button type="button" class="btn btn-primary mr-2">Mine</button>
				<button type="button" class="btn btn-secondary mr-2">Shop</button>
				<button type="button" class="btn btn-secondary mr-2">Leaderboard</button>
				<button type="button" class="btn btn-success mr-2">Inventory</button>
			</div>
		</div>
	</div>
</div>

