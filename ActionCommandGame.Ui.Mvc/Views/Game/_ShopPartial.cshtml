@model IList<Item>

<h4>Shop</h4>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <button class="btn btn-success buy-button" data-itemid="@item.Id">Buy</button>
                </div>
            </div>
        </div>
    }
</div>